<script>
// Update total
function updateTotal(){
    document.getElementById("totalAmount").innerText =
        "$" + (500 * document.getElementById("quantity").value);
}

// Copy wallet
function copyWallet(){
    navigator.clipboard.writeText("bc1qqla2r8dmmvefq9svus0kv098nnvudsehpzmut8").then(()=>{
        let b=document.querySelector('.copy-btn');
        b.innerHTML="✔ Copied!";
        b.style.background="#2ecc71";
        setTimeout(()=>{
            b.innerHTML="Copy Wallet Address";
            b.style.background="#4a6cff";
        },1500);
    });
}

// Countdown
let end = Date.now() + 48*60*60*1000;
setInterval(()=>{
    let diff=end-Date.now();
    if(diff<=0){
        document.getElementById("timer").innerHTML="Price increased to $750";
        return;
    }
    let h=Math.floor(diff/3600000),
        m=Math.floor((diff%3600000)/60000),
        s=Math.floor((diff%60000)/1000);
    document.getElementById("timer").innerHTML = `${h}h ${m}m ${s}s`;
},1000);

// Modal logic
function openModal(){
    document.getElementById("modalBg").style.display="flex";
    document.getElementById("confirmBox").style.display="block";
}
function closeModal(){
    document.getElementById("modalBg").style.display="none";
}
</script>

